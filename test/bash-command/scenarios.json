{
  "set_env_sudo": {
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "bash-command": {
        "sudocommand": "echo -e HELLO=5 >> /etc/environment"
      }
    }
  },
  "set_rc_user": {
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "bash-command": {
        "usercommand": "echo export CURRENT_USER=$(whoami) >> $HOME/.bashrc"
      }
    }
  },
  "sudo_and_user": {
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "bash-command": {
        "sudocommand": "echo -e HELLO=5 >> /etc/environment",
        "usercommand": "echo export CURRENT_USER=$(whoami) >> $HOME/.bashrc"
      }
    }
  }
}
