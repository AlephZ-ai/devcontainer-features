{
  "name": "Sudo Command",
  "id": "sudo-command",
  "version": "1.0.57",
  "description": "Executes a sudo command",
  "documentationURL": "https://github.com/alephz-ai/devcontainer-features/tree/main/src/sudo-command",
  "options": {
    "username": {
      "type": "string",
      "default": "automatic",
      "description": "If your sudo script needs access to a user so it can make modifications"
    },
    "command": {
      "type": "string",
      "proposals": [
        "echo hi!"
      ],
      "default": "echo TEST=42 >> /etc/environment",
      "description": "command to be executed as root (will be forwarded as is to a 'bash -c <command>' line)"
    }
  },
  "installsAfter": []
}
