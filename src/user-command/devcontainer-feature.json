{
  "name": "User Command",
  "id": "user-command",
  "version": "1.1.41",
  "description": "Executes a user command",
  "documentationURL": "https://github.com/alephz-ai/devcontainer-features/tree/main/src/user-command",
  "options": {
    "username": {
      "type": "string",
      "default": "automatic",
      "description": "User to run command as"
    },
    "command": {
      "type": "string",
      "proposals": [
        "echo hi!"
      ],
      "default": "echo export TEST=42 >> \"\\$HOME/.bashrc\"",
      "description": "command to be executed as username (will be forwarded as is to a 'su <username> -c <command>' line)"
    }
  },
  "installsAfter": []
}
